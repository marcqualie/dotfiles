root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,scss,gql,graphql,go,haml,html,js,json,jsx,lock,md,py,php,rb,ts,tsx,yml,vue}]
charset = utf-8

[*.go]
indent_style = tab
indent_size = 2

[*.php]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 2
